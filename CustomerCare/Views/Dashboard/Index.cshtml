@model CustomerCare.Models.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Support Dashboard";
}

<h2 class="mb-3">Support Dashboard</h2>

<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="card app-card dashboard-card">
            <div class="card-body">
                <div class="text-muted small mb-1">Total Tickets</div>
                <h3>@Model.TotalTickets</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card app-card dashboard-card">
            <div class="card-body">
                <div class="text-muted small mb-1">Open</div>
                <h3>@Model.OpenTickets</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card app-card dashboard-card">
            <div class="card-body">
                <div class="text-muted small mb-1">In Progress</div>
                <h3>@Model.InProgressTickets</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card app-card dashboard-card">
            <div class="card-body">
                <div class="text-muted small mb-1">Resolved / Closed</div>
                <h3>@(Model.ResolvedTickets + Model.ClosedTickets)</h3>
            </div>
        </div>
    </div>
</div>

<h4>Tickets by Priority</h4>
<div class="card app-card">
    <div class="card-body">
        <table class="table table-striped table-sm mb-0">
            <thead>
                <tr>
                    <th>Priority</th>
                    <th>Count</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model.ByPriority.OrderByDescending(x => x.Count))
                {
                    <tr>
                        <td>@p.Priority</td>
                        <td>@p.Count</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
