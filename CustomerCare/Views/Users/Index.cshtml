@model IEnumerable<CustomerCare.Models.ViewModels.UserWithRolesViewModel>
@using CustomerCare.Models.Identity

@{
    ViewData["Title"] = "User & Role Management";
}

<h2>User & Role Management</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th>Email</th>
            <th>Roles</th>
            <th>Admin</th>
            <th>Employee</th>
            <th>User</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            var isAdmin = u.Roles.Contains(RoleNames.Admin);
            var isEmployee = u.Roles.Contains(RoleNames.Employee);
            var isUser = u.Roles.Contains(RoleNames.User);

            <tr>
                <td>@u.Email</td>
                <td>@string.Join(", ", u.Roles)</td>

                <td>
                    @* Admin toggle *@
                    @if (!isAdmin)
                    {
                        <form asp-action="AddRole" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="userId" value="@u.Id" />
                            <input type="hidden" name="role" value="@RoleNames.Admin" />
                            <button type="submit" class="btn btn-sm btn-outline-primary">
                                Make Admin
                            </button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="RemoveRole" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="userId" value="@u.Id" />
                            <input type="hidden" name="role" value="@RoleNames.Admin" />
                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                Remove Admin
                            </button>
                        </form>
                    }
                </td>

                <td>
                    @* Employee toggle *@
                    @if (!isEmployee)
                    {
                        <form asp-action="AddRole" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="userId" value="@u.Id" />
                            <input type="hidden" name="role" value="@RoleNames.Employee" />
                            <button type="submit" class="btn btn-sm btn-outline-primary">
                                Make Employee
                            </button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="RemoveRole" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="userId" value="@u.Id" />
                            <input type="hidden" name="role" value="@RoleNames.Employee" />
                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                Remove Employee
                            </button>
                        </form>
                    }
                </td>

                <td>
                    @* User toggle (optional) *@
                    @if (!isUser)
                    {
                        <form asp-action="AddRole" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="userId" value="@u.Id" />
                            <input type="hidden" name="role" value="@RoleNames.User" />
                            <button type="submit" class="btn btn-sm btn-outline-primary">
                                Add User Role
                            </button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="RemoveRole" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="userId" value="@u.Id" />
                            <input type="hidden" name="role" value="@RoleNames.User" />
                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                Remove User Role
                            </button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
